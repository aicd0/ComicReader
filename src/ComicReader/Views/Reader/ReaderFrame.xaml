<UserControl
    x:Class="ComicReader.Views.Reader.ReaderFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        x:Name="MainFrame"
        Loaded="OnFrameLoaded"
        SizeChanged="OnFrameSizeChanged">
        <Grid
            Width="{x:Bind ViewModel.FrameWidth, Mode=OneWay}"
            Height="{x:Bind ViewModel.FrameHeight, Mode=OneWay}"
            Margin="{x:Bind ViewModel.FrameMargin, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image x:Name="ImageLeft" Grid.Column="0" />
            <Image x:Name="ImageRight" Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>
