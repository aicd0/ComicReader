<UserControl
    x:Class="ComicReader.Views.Reader.ReaderPreviewImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ccs="using:ComicReader.Common.SimpleImageView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Width="{StaticResource ReaderPreviewImageWidth}" Height="{StaticResource ReaderPreviewImageHeight}">
        <ccs:SimpleImageView x:Name="ImageHolder" />
        <Grid
            Margin="0,0,8,8"
            Padding="5,2,5,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="White"
            CornerRadius="5"
            Opacity="0.9">
            <TextBlock
                FontWeight="Bold"
                Foreground="Black"
                Text="{x:Bind Model.Page}" />
        </Grid>
    </Grid>
</UserControl>
