<Page
    x:Class="ComicReader.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ComicReader.Controls"
    xmlns:converters="using:ComicReader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource TabViewItemHeaderBackgroundSelected}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Converters  -->
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <FontIcon
                Margin="25,6,10,0"
                FontFamily="Segoe MDL2 Assets"
                Glyph="&#xE713;" />
            <TextBlock
                x:Uid="SettingHeader"
                FontSize="32"
                FontWeight="Light" />
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Padding="30,0,25,0"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition x:Name="ColumnMiddle" Width="50" />
                    <ColumnDefinition x:Name="ColumnRight" Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,25,0,0"
                    Orientation="Vertical"
                    Spacing="5">

                    <!--  Image Source  -->
                    <controls:SettingExpander
                        x:Uid="ImageLocationExpander"
                        Glyph="&#xEB9F;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <StackPanel Orientation="Vertical">
                                <Button x:Uid="ChooseLocationButton" Click="ChooseLocationsClick" />
                                <Grid Height="20" />
                                <TextBlock x:Uid="ArchiveEncoding" Style="{StaticResource SettingsPageBodyTextBlock}" />
                                <Grid Height="8" />
                                <ComboBox
                                    MinWidth="200"
                                    DisplayMemberPath="Item1"
                                    ItemsSource="{x:Bind Shared.Encodings, Mode=OneWay}"
                                    SelectedValue="{x:Bind Shared.DefaultArchiveCodePage, Mode=TwoWay}"
                                    SelectedValuePath="Item2" />
                            </StackPanel>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>

                    <!--  Reader  -->
                    <controls:SettingExpander
                        x:Uid="ReaderExpander"
                        Glyph="&#xE736;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="TransitionAnimation" Style="{StaticResource SettingsPageBodyTextBlock}" />
                                <ToggleSwitch IsOn="{x:Bind Shared.TransitionAnimation, Mode=TwoWay}" />
                            </StackPanel>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>

                    <!--  History  -->
                    <controls:SettingExpander
                        x:Uid="HistoryExpander"
                        Glyph="&#xE81C;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <StackPanel Orientation="Vertical">
                                <Button
                                    x:Uid="ClearAllHistoryButton"
                                    Click="OnHistoryClearAllClicked"
                                    IsEnabled="{x:Bind Shared.IsClearHistoryEnabled, Mode=OneWay}" />
                                <Grid Height="15" />
                                <TextBlock x:Uid="SaveHistory" Style="{StaticResource SettingsPageBodyTextBlock}" />
                                <ToggleSwitch IsOn="{x:Bind Shared.HistorySaveBrowsingHistory, Mode=TwoWay}" />
                            </StackPanel>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>

                    <!--  Appearance  -->
                    <controls:SettingExpander
                        x:Uid="AppearanceExpander"
                        Glyph="&#xE790;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    x:Uid="ApplyOnNextLaunch"
                                    Style="{StaticResource SettingsPageBodyTextBlock}"
                                    Visibility="{x:Bind Shared.AppearanceChanged, Mode=OneWay}" />
                                <muxc:RadioButtons>
                                    <RadioButton x:Uid="ThemeLight" IsChecked="{x:Bind Shared.AppearanceLightChecked, Mode=TwoWay}" />
                                    <RadioButton x:Uid="ThemeDark" IsChecked="{x:Bind Shared.AppearanceDarkChecked, Mode=TwoWay}" />
                                    <RadioButton x:Uid="ThemeUseSystemSetting" IsChecked="{x:Bind Shared.AppearanceUseSystemSettingChecked, Mode=TwoWay}" />
                                </muxc:RadioButtons>
                            </StackPanel>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>

                    <!--  Keyboard shortcuts  -->
                    <controls:SettingExpander
                        x:Uid="KeyboardShortcutsExpander"
                        Glyph="&#xE92E;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1000*" MaxWidth="300" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <controls:HotkeyInfo Key="Space/Page Down" x:Uid="HotkeyNextPage" />
                                    <controls:HotkeyInfo Key="Page Up" x:Uid="HotkeyPreviousPage" />
                                    <controls:HotkeyInfo Key="Home" x:Uid="HotkeyFirstPage" />
                                    <controls:HotkeyInfo Key="End" x:Uid="HotkeyLastPage" />
                                    <controls:HotkeyInfo Key="F" x:Uid="HotkeyEnterFullscreen" />
                                    <controls:HotkeyInfo Key="Esc/F" x:Uid="HotkeyExitFullscreen" />
                                </StackPanel>
                            </Grid>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>

                    <!--  Advanced  -->
                    <controls:SettingExpander
                        x:Uid="AdvancedExpander"
                        Glyph="&#xEC7A;"
                        IsExpanded="True">
                        <controls:SettingExpander.InnerContent>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        x:Uid="RescanFilesButton"
                                        Click="OnRescanFilesClicked"
                                        IsEnabled="{x:Bind Shared.IsRescanning, Converter={StaticResource BooleanNegationConverter}, Mode=OneWay}" />
                                    <ProgressRing
                                        Margin="20,0,0,0"
                                        VerticalAlignment="Center"
                                        IsActive="{x:Bind Shared.IsRescanning, Mode=OneWay}" />
                                </StackPanel>
                                <Grid Height="8" />
                                <TextBlock
                                    x:Uid="RescanFilesDetail"
                                    Foreground="{ThemeResource ForegroundGrey2}"
                                    Style="{StaticResource SettingsPageBodyTextBlock}" />
                                <Grid Height="10" />
                                <TextBlock x:Uid="DebugMode" Style="{StaticResource SettingsPageBodyTextBlock}" />
                                <ToggleSwitch IsOn="{x:Bind Shared.AdvancedDebugMode, Mode=TwoWay}" />
                            </StackPanel>
                        </controls:SettingExpander.InnerContent>
                    </controls:SettingExpander>
                </StackPanel>

                <StackPanel
                    x:Name="RightColumnContent"
                    Grid.Row="0"
                    Grid.Column="2"
                    Orientation="Vertical">
                    <!--  Statistics  -->
                    <TextBlock x:Uid="Statistics" Style="{StaticResource SettingsPageSubTitleTextBlock}" />
                    <TextBlock
                        x:Name="StatisticsTextBlock"
                        Style="{StaticResource SettingsPageBodyTextBlock}"
                        Text="Updating..." />

                    <!--  Feedback  -->
                    <TextBlock x:Uid="Feedback" Style="{StaticResource SettingsPageSubTitleTextBlock}" />
                    <TextBlock x:Uid="FeedbackIntroduction" Style="{StaticResource SettingsPageBodyTextBlock}" />
                    <Button
                        x:Uid="SendFeedbackButton"
                        Margin="0,10,0,0"
                        Click="OnSendFeedbackButtonClicked" />
                    <RichTextBlock Margin="0,8,0,0" IsTextSelectionEnabled="False">
                        <Paragraph>
                            <Run x:Name="ContributionRunBeforeLink" />
                            <Hyperlink NavigateUri="https://github.com/aicd0/ComicReader">
                                <Run Text="GitHub" />
                            </Hyperlink>
                            <Run x:Name="ContributionRunAfterLink" />
                        </Paragraph>
                    </RichTextBlock>

                    <!--  About  -->
                    <TextBlock x:Uid="About" Style="{StaticResource SettingsPageSubTitleTextBlock}" />
                    <TextBlock
                        x:Name="AboutBuildVersionControl"
                        Style="{StaticResource SettingsPageBodyTextBlock}"
                        Text="AboutBuildVersion" />
                    <TextBlock
                        x:Name="AboutCopyrightControl"
                        Style="{StaticResource SettingsPageBodyTextBlock}"
                        Text="© AboutCopyright" />
                    <Grid Height="8" />
                    <RichTextBlock IsTextSelectionEnabled="False">
                        <Paragraph>
                            <Hyperlink NavigateUri="https://github.com/aicd0/ComicReader/blob/master/privacy_policy.md">
                                <Run x:Uid="PrivacyPolicy" />
                            </Hyperlink>
                        </Paragraph>
                    </RichTextBlock>

                    <!--  Disclaimer  -->
                    <TextBlock x:Uid="Disclaimer" Style="{StaticResource SettingsPageSubTitleTextBlock}" />
                    <TextBlock
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource SettingsPageBodyTextBlock}"
                        Text="THE SOFTWARE IS PROVIDED &quot;AS IS&quot;, WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM, OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE." />
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutVisualStates">
                <VisualState x:Name="LargeWideView">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" MinWindowWidth="820" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters />
                </VisualState>
                <VisualState x:Name="SideVisible">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ColumnMiddle.Width" Value="0" />
                        <Setter Target="ColumnRight.Width" Value="0" />
                        <Setter Target="RightColumnContent.(Grid.Column)" Value="0" />
                        <Setter Target="RightColumnContent.(Grid.Row)" Value="1" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
