<Page
    x:Class="ComicReader.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ComicReader.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mtuuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource TabViewItemHeaderBackgroundSelected}"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <mtuuc:MarkdownTextBlock
                x:Uid="HelpPageMarkdown"
                Margin="20,10"
                Background="Transparent" />
        </ScrollViewer>
    </Grid>
</Page>
