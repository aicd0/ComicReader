<UserControl
    x:Class="ComicReader.Controls.ReadeFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid DataContextChanged="OnFrameDataContextChanged" SizeChanged="OnFrameSizeChanged">
        <Grid
            Width="{x:Bind Ctx.ImageWidth, Mode=OneWay}"
            Height="{x:Bind Ctx.ImageHeight, Mode=OneWay}"
            Margin="{x:Bind Ctx.Margin}">
            <Image Source="{x:Bind Ctx.ImageSource, Mode=OneWay}" Visibility="{x:Bind Ctx.IsImageVisible, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>