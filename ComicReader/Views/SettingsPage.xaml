<Page x:Class="ComicReader.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Settings"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Grid.Row="0"
                   Margin="25,40,0,20" />
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto"
                      Padding="25,0,25,0"
                      Grid.Row="1"
                      MaxWidth="500"
                      HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Comics on this PC"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <Grid Height="8" />
                <HyperlinkButton Content="Choose where we look for comics"
                                 Click="ChooseLocationsClick" />
                <Grid Height="40" />
                <TextBlock Text="Reader"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <Grid Height="8" />
                <TextBlock Text="Left to right" />
                <ToggleSwitch IsOn="{x:Bind Shared.P_Reader_LeftToRight, Mode=TwoWay}"/>
                
                <Grid Height="40" />
                <TextBlock Text="Privacy"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <Grid Height="8" />
                <TextBlock Text="Save browsing history" />
                <ToggleSwitch IsOn="{x:Bind Shared.P_Privacy_SaveBrowsingHistory, Mode=TwoWay}" />

                <Grid Height="40" />
                <TextBlock Text="Statistics"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
                <Grid Height="8" />
                <TextBlock x:Name="StatisticsTextBlock" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
