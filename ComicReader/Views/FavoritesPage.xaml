<Page x:Class="ComicReader.Views.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:converters="using:ComicReader.Converters"
      xmlns:data="using:ComicReader.Data"
      mc:Ignorable="d"
      Background="Transparent"
      NavigationCacheMode="Enabled">

    <Page.Resources>

        <!-- common template -->
        <DataTemplate x:Key="CommonTemplate"
                      x:DataType="data:FavoritesItemModel">
            <muxc:TreeViewItem AutomationProperties.Name="{x:Bind Name}"
                               ItemsSource="{x:Bind Children}"
                               AllowDrop="{x:Bind AllowDrop}"
                               IsExpanded="{x:Bind Expanded, Mode=TwoWay}"
                               VerticalContentAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               PointerPressed="MainTreeViewItemPressed">
                <muxc:TreeViewItem.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Open in new tab"
                                        Click="OpenInNewTabClick"
                                        Visibility="{x:Bind IsItem, Mode=OneWay}" />
                        <MenuFlyoutItem Text="Create new folder"
                                        Click="NewFolderClick" />
                        <MenuFlyoutItem Text="Sort by name"
                                        Click="SortByNameClick" />
                        <MenuFlyoutItem Text="Rename"
                                        Click="RenameClick" />
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Delete"
                                        Click="DeleteClick" />
                    </MenuFlyout>
                </muxc:TreeViewItem.ContextFlyout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Height="25"
                          Grid.Column="0">
                        <Grid Visibility="{x:Bind IsItemN, Mode=OneWay}">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xED41;"
                                      FontSize="18"
                                      Margin="0,4,0,0"
                                      Visibility="{x:Bind ExpandedN, Mode=OneWay}" />
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xED43;"
                                      FontSize="18"
                                      Margin="0,4,0,0"
                                      Visibility="{x:Bind Expanded, Mode=OneWay}" />
                        </Grid>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xE729;"
                                  FontSize="18"
                                  Visibility="{x:Bind IsItem, Mode=OneWay}" />
                    </Grid>
                    <TextBlock Text="{x:Bind Name}"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Grid.Column="2"
                               ToolTipService.ToolTip="{x:Bind Name}" />
                </Grid>
            </muxc:TreeViewItem>
        </DataTemplate>

        <!-- renaming template -->
        <DataTemplate x:Key="RenamingTemplate"
                      x:DataType="data:FavoritesItemModel">
            <muxc:TreeViewItem AutomationProperties.Name="{x:Bind Name}"
                               ItemsSource="{x:Bind Children}"
                               IsExpanded="{x:Bind Expanded, Mode=TwoWay}"
                               VerticalContentAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               AllowDrop="False">
                <Grid Height="25"
                      Margin="0,2,10,0">
                    <TextBox Text="{x:Bind EditingName}"
                             KeyDown="RenameTextBoxKeyDown"
                             VerticalAlignment="Center"
                             TextChanged="RenameTextBoxTextChanged"
                             HorizontalAlignment="Left"
                             DataContextChanged="RenameTextBoxDataContextChanged" />
                </Grid>
            </muxc:TreeViewItem>
        </DataTemplate>

        <!-- template selector -->
        <converters:FavoritesItemDataTemplateSelector x:Key="FavoritesItemTemplateSelector"
                                                      CommonTemplate="{StaticResource CommonTemplate}"
                                                      RenamingTemplate="{StaticResource RenamingTemplate}" />
    </Page.Resources>

    <Grid>
        <muxc:TreeView x:Name="MainTreeView"
                       ItemInvoked="MainTreeViewItemInvoked"
                       PointerPressed="MainTreeViewBackgroundPressed"
                       ItemsSource="{x:Bind DataSource}"
                       ItemTemplateSelector="{StaticResource FavoritesItemTemplateSelector}"
                       DragItemsCompleted="MainTreeViewDragItemsCompleted">
            <muxc:TreeView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Create new folder"
                                    Click="RootNewFolderClick" />
                    <MenuFlyoutItem Text="Sort by name"
                                    Click="RootSortByNameClick" />
                </MenuFlyout>
            </muxc:TreeView.ContextFlyout>
        </muxc:TreeView>
    </Grid>
</Page>
